<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.projek.HomeFragment" android:label="Resep Terbaru"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/savedRecipesFragment"
        android:name="com.example.projek.SavedRecipesFragment" android:label="Resep Tersimpan"
        tools:layout="@layout/fragment_saved_recipes" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.projek.SearchFragment" android:label="Cari Resep"
        tools:layout="@layout/fragment_search" />

    <action
        android:id="@+id/action_global_to_detailRecipeActivity"
        app:destination="@id/detailRecipeActivity" />

    <activity
        android:id="@+id/detailRecipeActivity"
        android:name="com.example.projek.DetailRecipeActivity" android:label="Detail Resep"
        tools:layout="@layout/activity_detail_recipe" />

</navigation>