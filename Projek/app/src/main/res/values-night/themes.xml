<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Projek" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorPrimaryVariant">@color/blue_accent_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/teal_accent</item>
        <item name="colorSecondaryVariant">@color/teal_accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- System UI colors -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_status_bar</item>
        <item name="android:navigationBarColor">@color/dark_navigation_bar</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="android:textColorHint">@color/dark_text_hint</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorError">@color/error_color_dark</item>
        <item name="colorOnError">@color/white</item>

        <!-- Card colors -->
        <item name="cardBackgroundColor">@color/dark_card_background</item>
        <item name="cardStrokeColor">@color/dark_card_stroke</item>

        <!-- Component styles -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Dark</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Dark</item>
        <item name="itemRecipeHomeTextStyle">@style/TextView.ItemRecipeHome.Dark</item>

        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/ripple_dark</item>
        <!-- Custom card attributes -->
        <item name="cardStrokeColor">@color/dark_card_stroke</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.App.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Custom bottom navigation style - FIXED -->
    <style name="Widget.App.BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/dark_surface_elevated</item>
        <item name="itemIconTint">@drawable/bottom_nav_selector_dark</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_dark</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Recipe text style -->
    <style name="TextView.ItemRecipeHome.Dark" parent="android:Widget.TextView">
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
</resources>